<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
	<TextView 
	    android:id="@+id/CustomFontText"
	    android:text="@string/wolf"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
		android:layout_gravity="center_horizontal"
		android:layout_margin="10dp"
		android:textColor="@color/white"
		android:textSize="32sp"
		android:typeface="serif"/>
	
	<EditText android:id="@+id/playerName1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:hint="@string/player1"
	     />
	
	<EditText android:id="@+id/playerName2" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:hint="@string/player2"
	     />
	
	<EditText android:id="@+id/playerName3" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"	    
	    android:hint="@string/player3"
	     />
	
	<EditText android:id="@+id/playerName4" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"	    
	    android:hint="@string/player4"
	     />
	
		<EditText android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
   	    android:hint="@string/buyin"
	    android:layout_marginLeft="15dp"
	    android:inputType="number"
	    />
	
	<Button android:id="@+id/startGame" 
	    android:background="@drawable/greenbutton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="5dp"
	    android:text="@string/start" />
	    
</LinearLayout>